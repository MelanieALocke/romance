<h1 class="page-title text-center">Love is in the Pages</h1>

<div class="box col-10 offset-1">
  <% @books.each do |book| %>
    <br />
    <div>
      <h1 class="title-link"><%= link_to book.title, book_path(book) %></h1>
      <h2><%= book.author %></h2>
      <h5><%= book.rating %></h5>
      <p><%= book.description %></p>
    </div>
    <br />
  <% end %>
</div>